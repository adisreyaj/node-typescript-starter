{
  "name": "ts-server",
  "version": "0.0.1",
  "description": "A starter template for Typescript based NodeJS server.",
  "main": "server.js",
  "scripts": {
    "watch-ts": "tsc -w",
    "start:watch": "nodemon ./dist/server.js",
    "start": "node ./dist/server.js",
    "dev": "concurrently \"tsc -w\" \"npm run start:watch\"",
    "test": "jest --detectOpenHandles --runInBand",
    "test:coverage": "jest --forceExit --runInBand --coverage"
  },
  "keywords": [
    "NodeJs",
    "Typescript",
    "Node"
  ],
  "author": {
    "name": "Adithya Sreyaj",
    "email": "adi.sreyaj@gmail.com"
  },
  "publisher": "adisreyaj",
  "license": "MIT",
  "dependencies": {
    "@types/morgan": "^1.7.37",
    "body-parser": "^1.18.3",
    "concurrently": "^4.1.0",
    "dotenv": "^8.1.0",
    "express": "^4.16.4",
    "morgan": "^1.9.1",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.16.1",
    "@types/jest": "^24.0.11",
    "@types/node": "^11.13.2",
    "@types/supertest": "^2.0.7",
    "chai": "^4.2.0",
    "jest": "^24.7.1",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "tslint": "^5.20.0",
    "tslint-config-airbnb": "^5.11.2",
    "typescript": "^3.6.4"
  }
}
